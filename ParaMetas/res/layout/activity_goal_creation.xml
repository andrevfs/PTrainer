<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GoalCreationActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/editText1"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:ems="10"
                android:hint="Digite o título da meta"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="290dp"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="Digite a descrição da meta"
                android:inputType="none" />

            <Button
                android:id="@+id/button1"
                style="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="17dp"
                android:onClick="showDatePickerDialog"
                android:text="De:" />

            <Button
                android:id="@+id/button5"
                style="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="3dp"
                android:onClick="showDatePickerDialog"
                android:text="Até:" />

            <Button
                android:id="@+id/button4"
                style="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="3dp"
                android:onClick="showNumberDialog"
                android:text="Meta:" />

            <Button
                android:id="@+id/button2"
                style="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="3dp"
                android:text="Unidade:"
                android:onClick="createUnit" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:onClick="colorPicker"
                android:src="@drawable/rect" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:height="40dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:text="Confirmar"
                android:onClick="createGoal" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>