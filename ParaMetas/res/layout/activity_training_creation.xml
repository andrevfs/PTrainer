<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
     <EditText 
        android:id="@+id/textTrainingName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:maxLength="20"
        android:minWidth="220dp"
        android:hint="@string/trainingName"
        android:padding="10dp"
        android:inputType="textShortMessage"/>
      
     
    <EditText 
        android:id="@+id/textTrainingDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/textTrainingName"
		android:minWidth="220dp"
		android:hint="@string/trainingDescription"
		android:padding="10dp" 
		android:inputType="textShortMessage"/>
    
    <Button
        android:id="@+id/buttonNewGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/newGoal"
        android:minWidth="220dp"
        android:padding="10dp"
        android:layout_below="@+id/textTrainingDescription"
        />   
        
 
</RelativeLayout>
